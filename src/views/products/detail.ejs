<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="icon" href="img/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>

    <title>quboverde</title>
</head>
<body>
    <%- include("../includes/header") %> 

    <main class="main">
        <section class="product">

            <picture class="product-img">
                <% let imagenes = JSON.parse(catalogo.imagenes.image)%>
                <img src="/img/upload/product/<%= imagenes[0] %>" alt="">
            </picture>

            <article class="product-desc">
                <section class="desc-name">
                    <h2><%= catalogo.name%></h2>
                    <h3>$ <%= catalogo.precios.price %></h3>
                </section>

                <section class="desc-text">
                    <h4><%= catalogo.precios.disconunt %></h4>
                </section>

                <section class="desc-care">

                    <section class="desc-care-box">
                        <picture><img src="/img/gota.svg" alt=""></picture>
                        <h2>riego</h2>
                        <% switch (catalogo.irr) {
                            case 0: 
                            %> <h3>Semanal</h3> <%
                            break;
                            
                            case 1: 
                            %> <h3>cada 3 dias</h3> <%
                            break;

                            case 2: 
                            %> <h3>Leve</h3><%
                            break;

                            case 3: 
                            %> <h3>Moderado</h3> <%
                            break;

                            case 4: 
                            %><h3>Abundante</h3> <%
                            break;

                            case 5:
                            %><h3>Abundante <b>+</b></h3> <%
                            break;
                        } %>
                    </section>

                    <section class="desc-care-box">
                        <picture><img src="/img/sol.svg" alt=""></picture>
                        <h2>Luz</h2>
                        <% switch (catalogo.light) {
                            case 1: 
                            %> <h3>Sombra</h3> <%
                            break;
                            
                            case 2: 
                            %> <h3>Artificial</h3> <%
                            break;

                            case 3: 
                            %> <h3>indirecta</h3><%
                            break;

                            case 4: 
                            %> <h3>Moderada</h3> <%
                            break;

                            case 5: 
                            %><h3>Abundante</h3> <%
                            break;
                        } %>
                    </section>

                    <section class="desc-care-box">
                        <picture><img src="/img/mascota.svg" alt=""></picture>
                        <h2>mascotas</h2>
                        <% if(catalogo.pet == 1){ %> 
                        <h3>apta mascotas</h3>
                        <% } else { %>
                        <h3><b>NO</b> apto</h3>
                        <% } %>
                    </section>
                    
                </section>

                <form class="prod-action" action="#">
                    <input type="number" min="1" class="fav">
                    <button class="add-cart">agregar</button>
                    <button class="fav"><img src="/img/fav.svg" alt=""></button>
                </form>

            </article>

            <article class="product-care">

                <section class="care-riego">
                    <h2 class="care-title">Riego</h2>
                    <form action="#" class="care-bar-r care-bar">
                        <picture class="bar-img"><img src="/img/gotita.svg" alt=""></picture>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.irr == 1 || catalogo.irr == 0 || catalogo.irr > 1) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.irr == 2 || catalogo.irr > 2 ) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.irr == 3 || catalogo.irr > 3 ) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.irr == 4 || catalogo.irr > 4 ) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.irr == 5) { %> checked <% } %>>
                            <div></div>
                        </label>
                    </form>
                </section>

                <section class="care-riego">
                    <h2 class="care-title">Luz</h2>
                    <form action="#" class="care-bar-l care-bar">
                        <picture class="bar-img"><img src="/img/solcito.svg" alt=""></picture>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.light == 1 || catalogo.light > 1) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.light == 2 || catalogo.light > 2) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.light == 3 || catalogo.light > 3) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.light == 4 || catalogo.light > 4) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.light == 5) { %> checked <% } %>>
                            <div></div>
                        </label>
                    </form>
                </section>

                <section class="care-riego">
                    <h2 class="care-title">Mantenimiento</h2>
                    <form action="#" class="care-bar-m care-bar">
                        <picture class="bar-img"><img src="/img/palita.svg" alt=""></picture>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.diff == 1 || catalogo.diff > 1) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.diff == 2 || catalogo.diff > 2) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.diff == 3 || catalogo.diff > 3) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.diff == 4 || catalogo.diff > 4) { %> checked <% } %>>
                            <div></div>
                        </label>
                        <label>
                            <input type="checkbox" disabled <% if(catalogo.diff == 5) { %> checked <% } %>>
                            <div></div>
                        </label>
                    </form>

                </section>

            </article>

            <article class="product-scale">
            <section class="product-scale-centered">
                <picture class="product-scale-img"><img src="/img/hs.svg" alt=""></picture>
                <picture class="product-scale-img"><img src="/img/hsp1A.svg" alt=""></picture>
       
                <picture class="product-scale-img">
                    <% switch (catalogo.scale) {
                            case 1: 
                            %> <img src="/img/hsp1.svg" alt=""> <%
                            break;
                            
                            case 2: 
                            %> <img src="/img/hsp2.svg" alt=""> <%
                            break;

                            case 3: 
                            %> <img src="/img/hsp3.svg" alt=""><%
                            break;

                            case 4: 
                            %> <img src="/img/hsp4.svg" alt=""> <%
                            break;

                            case 5: 
                            %><img src="/img/hsp5.svg" alt=""> <%
                            break;
                        } %>
                        
                        </picture>
            </section>

                <picture class ="line1"></picture>
                <picture class ="line2"></picture>
                <picture class ="line3"></picture>
                <picture class ="line-base"></picture>
            </article>
        </section>
        
    <%- include("../includes/otherProducts", {dif: catalogo.dif, name: catalogo.name}) %> 
    </main>

    <%- include("../includes/footer") %> 
</body>
</html>