        <navbar>
            <!-- boton del menu hamburguesa-->
            <article class="burger">
                <a href="#" onclick="burgerMenuAction()"><img src="/img/burger-menu.svg" alt=""></a>
            </article>

            <!-- barra de navegacion-->
            <article class="navbar-menu" id="IDburgerMenu">
                <li><a href="/products/all">Todas las plantas</a></li>
                <li><a href="/products/bestseller">Promociones</a></li>
                <li><a href="/products/easymode">Para principiantes</a></li>
                <li><a href="/products/pet">Pet Friendly</a></li>
            
                <% if (locals.userLogged) { %> 
                    <% if (locals.userLogged.admin) { %>
